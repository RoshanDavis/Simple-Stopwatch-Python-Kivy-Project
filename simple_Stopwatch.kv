 
MainWidget:
<MainWidget>:
    AnchorLayout: 
        
        anchor_x: 'center'
        anchor_y: 'center'
        size_hint:.5,.3
        BoxLayout:
            orientation:'vertical'  
            Label:
                size_hint_y: 1.25
                text:root.time_label
                font_size:"100dp"
            GridLayout:
                cols:3
                rows:1
                padding:"20dp"
                spacing:"20dp"
                size_hint_y:1
                
                Button:
                    on_press: root.on_press_start()
                    text:"Start"
                Button:
                    on_press: root.on_press_stop()
                    text:"Stop"
                Button:
                    on_press: root.on_press_reset()
                    text:"Reset"
